@model PagedList.IPagedList<Workbounty.Models.AddWorkitems>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "Viewitemsiwantdone";
    Layout = "~/Views/_DashboardLayout.cshtml";
}
<h2>Items I Want Done</h2>
<div class="col-sm-10">
    <div class="widget-box transparent" id="recent-box">
        <div class="widget-header">
            <div class="col-xs-8">
            </div>
            <div class="row">
                <div class="col-md-5"></div>
                <div class="col-md-8">
                    <table id="simple-table" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th width="5%">Sr No</th>
                                <th width="21%">Title</th>
                                <th width="5%">Start Date</th>
                                <th width="5%">End Date</th>
                                <th width="10%">Assign to</th>
                                <th width="5%">Rewards</th>
                                <th width="5%">Status</th>
                                <th width="2%">Feedback</th>
                            </tr>
                        </thead>

                        @{int i=1;}
                        @foreach (Workbounty.Models.AddWorkitems item in Model)
                        {
                           <tbody>
                                <tr>
                                    <td>@i</td>
                                    <td>@Html.ActionLink(item.Title, "ViewAssignedworkitem", "Workitem", new { currentWorkitemID = item.WorkitemID }, null) </td>
                                    <td>@Html.DisplayFor(a => item.StartDate)</td>
                                    <td>@Html.DisplayFor(a => item.EndDate)</td>
                                    <td>@Html.DisplayFor(a => item.FirstName)</td>
                                    <td>@Html.DisplayFor(a => item.ProposedReward)</td>
                                    <td>@Html.DisplayFor(a => item.Status)</td>
                                    <td></td>
                                </tr>
                            </tbody>
                            i++;
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="pagedList col-sm-10">
    @Html.PagedListPager(Model, page => Url.Action("Viewitemsiwantdone", new { page }), PagedListRenderOptions.PageNumbersOnly)
</div>


