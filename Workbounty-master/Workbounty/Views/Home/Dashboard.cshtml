@model List<Workbounty.Models.OpenWorkitems>
       @{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/_DashboardLayout.cshtml";
}


<h2></h2>
<div class="col-md-6"></div>
<div class="col-sm-6 col-lg-4">
</div>
<div class="col-sm-10">
    <div class="widget-box transparent" id="recent-box">
        <div class="widget-header">
            <div class="col-xs-8">
                <h4 class="widget-title lighter smaller">
                    @Html.ActionLink("Items I Want Done", "Viewitemsiwantdone", "Home") | @Html.ActionLink("Add workitem", "addworkitem", "Home")
                </h4>
            </div>

            <div class="row">
                <div class="col-md-5"></div>
                <div class="col-md-8">
                    <table id="simple-table" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th width="5%">Sr No</th>
                                <th width="21%">Title</th>
                                <th width="5%">Start Date</th>
                                <th width="5%">End Date</th>
                                <th width="10%">Assign to</th>
                                <th width="5%">Rewards</th>
                                <th width="5%">Status</th>
                                <th width="2%">Feedback</th>
                            </tr>
                        </thead>
                   

                        @foreach (Workbounty.Models.AddWorkitems item in ViewBag.itemsForIWantDone)
                        {
                            
                            <tbody>
                                <tr>
                                    <td>@(ViewBag.itemsForIWantDone.IndexOf(item) + 1)</td>
                                    <td>@Html.ActionLink(item.Title, "ViewAssignedworkitem", "Workitem", new { currentWorkitemID = item.WorkitemID }, null) </td>
                                    <td>@Html.DisplayFor(a => item.StartDate)</td>
                                    <td>@Html.DisplayFor(a => item.EndDate)</td>
                                    <td>@Html.DisplayFor(a => item.FirstName)</td>
                                    <td>@Html.DisplayFor(a => item.ProposedReward)</td>
                                    <td>@Html.DisplayFor(a => item.Status)</td>
                                    <td></td>
                                </tr>
                            </tbody>
                            if ((ViewBag.itemsForIWantDone.IndexOf(item) + 1) == 5)
                            {
                                break;
                            }
                        }
                        
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="col-sm-10">
    <div class="widget-box transparent" id="recent-box">
        <div class="widget-header">
            <div class="col-xs-8">
                <h4 class="widget-title lighter smaller">
                    @Html.ActionLink("Items I'm Working On", "Viewitemsimworkingon", "Home")

                </h4>
            </div>
            <div class="row">
                <div class="col-md-1"></div>
                <div class="col-md-8">
                    <table id="simple-table" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th width="5%">Sr No</th>
                                <th width="21%">Title</th>
                                <th width="5%">Start Date</th>
                                <th width="5%">End Date</th>
                                <th width="8%">Client</th>
                                <th width="5%">Rewards</th>
                                <th width="5%">Amount</th>
                                <th width="5%">Action</th>
                            </tr>
                        </thead>
                        <tbody></tbody>

                       @foreach (Workbounty.Models.AssignWorkitems myWorkitem in ViewBag.itemsForAssigntoMe)
                        { 
                            <tr>
                                <td>@(ViewBag.itemsForAssigntoMe.IndexOf(myWorkitem) + 1)</td>
                                <td>@Html.DisplayFor(a => myWorkitem.Title)</td>
                                <td>@Html.DisplayFor(a => myWorkitem.StartDate)</td>
                                <td>@Html.DisplayFor(a => myWorkitem.EndDate)</td>
                                <td>@Html.DisplayFor(a => myWorkitem.FirstName)</td>
                                <td>@Html.DisplayFor(a => myWorkitem.ProposedReward)</td>
                                <td>@Html.DisplayFor(a => myWorkitem.Amount)</td>
                                <td>@Html.ActionLink("Update", "UpdateWorkitem", "workitem", new { currentWorkitemID = myWorkitem.WorkitemID }, new { @class = "btn btn-minier btn-purple" }) </td>

                            </tr>
                            if ((ViewBag.itemsForAssigntoMe.IndexOf(myWorkitem) + 1) == 5)
                            {
                                break;
                            }

                        }
                    </table>


                </div>
            </div>

        </div>
    </div>
</div>
<div class="col-sm-10">
    <div class="widget-box transparent" id="recent-box">
        <div class="widget-header">
            <div class="col-xs-8">
                <h4 class="widget-title lighter smaller">
                    @Html.ActionLink("Items You Might Be Interested In", "Viewitemsinterestedin", "Home")
                </h4>
            </div>
            <div class="row">
                <div class="col-md-1"></div>
                <div class="col-md-8">
                    <table id="OpenWorkitem" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th width="5%">Sr No</th>
                                <th width="21%">Title</th>
                                <th width="5%">Created By</th>
                                <th width="8%">Summary</th>
                                <th width="5%">Rewards</th>
                                <th width="5%">Amount</th>
                                <th width="5%">Action</th>
                            </tr>
                        </thead>
              
                        @foreach (Workbounty.Models.OpenWorkitems i in ViewBag.itemsForAllWorkitem)
                        {
                            <tbody>
                                <tr>
                                    <td>@(ViewBag.itemsForAllWorkitem.IndexOf(i) + 1)</td>
                                    <td>@Html.DisplayFor(a => i.Title)</td>
                                    <td>@Html.DisplayFor(a => i.FirstName)</td>
                                    <td>@Html.DisplayFor(a => i.Summary)</td>
                                    <td>@Html.DisplayFor(a => i.ProposedReward)</td>
                                    <td>@Html.DisplayFor(a => i.Amount)</td>
                                    <td>@Html.ActionLink("Apply", "ApplyWorkitem", "workitem", new { currentWorkitemID = i.WorkitemID }, new { @class = "btn btn-minier btn-purple" }) </td>
                                </tr>
                            </tbody>
                            if ((ViewBag.itemsForAllWorkitem.IndexOf(i) + 1) == 5)
                            {
                                break;
                            }
                        
                        
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


